root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
indent_size = 2
max_line_length = 110

[{en.js,es.js,*.sh,*.md,Dockerfile,.editorconfig,package.json}]
max_line_length = 130

[*.md]
indent_style = unset
indent_size = unset
max_line_length = unset

[{**.svg,**.png,.vscode/**,LICENSE}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
max_line_length = unset
